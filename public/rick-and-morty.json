{
    "openapi": "3.0.0",
    "info": {
      "title": "Rick and Morty API",
      "description": "API para obtener información de la serie Rick and Morty.",
      "version": "1.0.0",
      "contact": {
        "name": "Rick and Morty API",
        "url": "https://rickandmortyapi.com"
      }
    },
    "servers": [
      {
        "url": "https://rickandmortyapi.com/api",
        "description": "Servidor principal"
      }
    ],
    "paths": {
      "/episode": {
        "get": {
          "summary": "Obtener lista de episodios",
          "operationId": "getEpisodes",
          "tags": ["Episodes"],
          "parameters": [
            {
              "name": "page",
              "in": "query",
              "description": "Número de página de resultados",
              "required": false,
              "schema": {
                "type": "integer",
                "example": 1
              }
            },
            {
              "name": "name",
              "in": "query",
              "description": "Filtrar por nombre del episodio",
              "required": false,
              "schema": {
                "type": "string",
                "example": "Pilot"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Lista de episodios",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "info": {
                        "type": "object",
                        "properties": {
                          "count": { "type": "integer" },
                          "pages": { "type": "integer" },
                          "next": { "type": "string", "nullable": true },
                          "prev": { "type": "string", "nullable": true }
                        }
                      },
                      "results": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": { "type": "integer" },
                            "name": { "type": "string" },
                            "air_date": { "type": "string" },
                            "episode": { "type": "string" },
                            "characters": {
                              "type": "array",
                              "items": { "type": "string" }
                            },
                            "url": { "type": "string" },
                            "created": { "type": "string" }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/location": {
        "get": {
          "summary": "Obtener lista de ubicaciones",
          "operationId": "getLocations",
          "tags": ["Locations"],
          "parameters": [
            {
              "name": "page",
              "in": "query",
              "description": "Número de página de resultados",
              "required": false,
              "schema": {
                "type": "integer",
                "example": 1
              }
            },
            {
              "name": "name",
              "in": "query",
              "description": "Filtrar por nombre de la ubicación",
              "required": false,
              "schema": {
                "type": "string",
                "example": "Earth"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Lista de ubicaciones",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "info": {
                        "type": "object",
                        "properties": {
                          "count": { "type": "integer" },
                          "pages": { "type": "integer" },
                          "next": { "type": "string", "nullable": true },
                          "prev": { "type": "string", "nullable": true }
                        }
                      },
                      "results": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": { "type": "integer" },
                            "name": { "type": "string" },
                            "type": { "type": "string" },
                            "dimension": { "type": "string" },
                            "residents": {
                              "type": "array",
                              "items": { "type": "string" }
                            },
                            "url": { "type": "string" },
                            "created": { "type": "string" }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  